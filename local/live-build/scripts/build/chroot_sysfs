set -e

# Including common functions
[ -e "${LIVE_BUILD}/scripts/build.sh" ] && . "${LIVE_BUILD}/scripts/build.sh" || . /usr/lib/live/build.sh

# Setting static variables
DESCRIPTION="Mount /sys"
USAGE="${PROGRAM} {install|remove} [--force]"

# Processing arguments and configuration files
Init_config_data "${@}"

_ACTION="${1}"
shift

# Requiring stage file
Require_stagefiles config bootstrap

case "${_ACTION}" in
	install)
		Echo_message "Begin mounting /sys... (LOCAL SCRIPT IN digabi-os!)"

		# Checking stage file
		Check_stagefile

		# Acquire lock file
		Acquire_lockfile

		# Create mountpoint
		mkdir -p chroot/sys

		# Mounting /sys
    mount || true
    echo "---------"
    ls -l chroot || true
    echo "---------"
    ls -l /sys || true
    echo "---------"
    ls -l /proc || true
    echo "---------"
		mount -t sysfs -o x-gvfs-hide sysfs-live chroot/sys

		# Creating stage file
		Create_stagefile
		;;

	remove)
		Echo_message "Begin unmounting /sys... (LOCAL SCRIPT IN digabi-os!)"

		# Checking stage file
		Ensure_stagefile_exists

		# Acquire lock file
		Acquire_lockfile

		# Unmounting /sys
		if [ -e chroot/sys/class ]
		then
		  mount || true
		  echo "---------"
		  ls -l chroot || true
		  echo "---------"
		  ls -l chroot/sys || true
		  echo "---------"
		  ls -l /sys || true
		  echo "---------"
		  ls -l /proc || true
		  echo "---------"
			umount chroot/sys
		fi

		# Removing stage file
		Remove_stagefile
		;;

	*)
		Echo_error "Invalid action parameter: '${_ACTION}'"
		Usage --fail
		;;
esac
